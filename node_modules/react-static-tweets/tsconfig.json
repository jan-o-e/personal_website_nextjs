{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "build",
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "lib": ["DOM"],
    "strict": false,
    "noImplicitReturns": false,
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment"
  },
  "include": ["node_modules/microbundle/index.d.ts", "src"]
}
